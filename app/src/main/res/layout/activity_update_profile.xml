<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFiles.UpdateProfile">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="95dp"
        android:layout_height="44dp"
        android:text="Name"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/changeProfileName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/changeProfileName"
        android:layout_width="442dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/changeProfileNumber"
        android:layout_width="438dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/changeProfile"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/changeProfile"
        android:layout_width="178dp"
        android:layout_height="56dp"
        style="@style/buttonDesign"
        android:text="Change Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeProfileNumber" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:text="Number"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/changeProfileNumber"
        app:layout_constraintTop_toBottomOf="@+id/changeProfileName"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>